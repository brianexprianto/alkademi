                                    <div class="col-12">
                                        <div class="coupon-all">
                                            
                                            <div class="coupon2">
                                                <form asp-controller="Order" asp-action="Checkout">
                                                <input class="button" value="Lanjutkan Pembayaran" type="submit">
                                                </form>
                                            </div>
                                        </div>
                                    </div>
                                </div> *@
                               
                            
                        </div>
                    </div>
                </div>
            </div>

