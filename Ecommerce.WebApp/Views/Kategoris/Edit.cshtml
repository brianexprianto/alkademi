@using Microsoft.AspNetCore.Mvc.Rendering;
@model Ecommerce.WebApp.Datas.Entities.KategoriProduk

@{
    ViewData["Title"] = "Create";
}

<h4>Edit Data Kategori</h4>
<div class="container-xxl flex-grow-1 container-p-y">
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit" method="post">
            @Html.AntiForgeryToken()
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input asp-for="IdKategori" type="hidden" class="form-control" />
            
            <div class="form-group">
                <label asp-for="NamaKategori" class="control-label"></label>
                <input asp-for="NamaKategori" class="form-control" />
                <span asp-validation-for="NamaKategori" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Deskripsi" class="control-label"></label>
                <input asp-for="Deskripsi" class="form-control" />
                <span asp-validation-for="Deskripsi" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Icon" class="control-label"></label>
                <input asp-for="Icon" class="form-control" />
                <span asp-validation-for="Icon" class="text-danger"></span>
                <img src="~/@Model.Icon" height="100" />
                
            </div>
            <div class="form-group">
                <input type="submit" value="Edit" class="btn btn-primary" />
            </div>
            </form>
    </div>        

<div>
    <a asp-action="Index">Back to List</a>
</div>
    </div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}